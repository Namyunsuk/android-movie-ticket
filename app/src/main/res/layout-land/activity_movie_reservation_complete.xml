<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_reservation_complete_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.complete.MovieReservationCompleteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#9160F9"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="@string/reservation_complete_guide"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screening_date_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reservation_count_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/reservation_amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp" />

</LinearLayout>
